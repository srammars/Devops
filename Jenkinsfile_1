pipeline {
    agent any

    environment {
        MVN_HOME = tool 'maven-3.5.2'
    }

    stages {
        stage('Clone repo') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh "${MVN_HOME}/bin/mvn clean test"
                }
            }
        }

        stage('Modify Test to Fail') {
            steps {
                script {
                    // Modify the test to intentionally fail
                    sh "sed -i 's/assertEquals(4, add(2, 2));/assertEquals(5, add(2, 2));/' src/test/java/DummyTest.java"
                }
            }
        }

        stage('Build with Failing Test') {
            steps {
                script {
                    // Build the project with the intentionally failing test
                    sh "${MVN_HOME}/bin/mvn clean test"
                }
            }
        }

        stage('Ignore Test') {
            steps {
                script {
                    // Ignore the failing test
                    sh "echo '<properties><skipTests>true</skipTests></properties>' > pom.xml"
                    sh "${MVN_HOME}/bin/mvn clean test"
                }
            }
        }

        stage('Publish Test Report') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if the build is successful'
        }
        failure {
            echo 'This will run only if the build fails'
        }
    }
}
