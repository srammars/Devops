pipeline {
    agent any

    environment {
        MVN_HOME = tool 'maven-3.5.2'
    }

    stages {
        stage('Clone repo') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                dir('demo') {
                    script {
                        sh "${MVN_HOME}/bin/mvn clean test"
                    }
                }
            }
        }

        stage('Modify Test to Fail') {
            steps {
                script {
                    // Modify a test to fail
                    sh 'echo "assertEquals(4, add(2, 2)); // Intentional failure" > demo/src/test/java/DummyTest.java'
                }
            }
        }

        stage('Build with Failing Test') {
            steps {
                dir('demo') {
                    script {
                        sh "${MVN_HOME}/bin/mvn clean test"
                    }
                }
            }
        }

        stage('Ignore Test') {
            steps {
                dir('demo') {
                    script {
                        // Ignore the failing test
                        sh 'echo "<properties><maven.test.skip>true</maven.test.skip></properties>" > pom.xml'
                        sh "${MVN_HOME}/bin/mvn clean test"
                    }
                }
            }
        }

        stage('Publish Test Report') {
            steps {
                junit 'demo/target/surefire-reports/**/*.xml'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if the build is successful'
        }
        failure {
            echo 'This will run only if the build fails'
        }
    }
}
