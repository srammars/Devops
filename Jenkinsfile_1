pipeline {
    agent any 

    tools {
        // Spécifier l'installation de Maven
        maven 'maven-3.5.2'
    }

    stages {
        stage('Build project') {
            steps {
                // Naviguer vers le répertoire du projet
                dir('demo') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -X'
                    sh './mvnw javadoc:javadoc'
                }
            }
        }
    }
    post {
        success {
            script {
              
                if (fileExists('**/target/surefire-reports/*.xml')) {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
            
        }
       
    }
} 