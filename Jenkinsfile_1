pipeline {
    agent any
    
    stages {
        stage('Clean Project') {
            steps {
                script {
                    // Ajouter l'étape de nettoyage ici
                    sh 'mvn clean'  // Cela dépend de votre configuration de build, ajustez selon votre besoin
                }
            }
        }
        
        stage('Clone repo') {
            steps {
                git branch: 'devops', url: 'https://github.com/srammars/Devops.git'
            }
        }

        stage('Build project') {
            steps {
                dir('demo') {
                    sh "'${tool 'maven-3.5.2'}/bin/mvn' -B -DskipTests clean package"
                    sh "'${tool 'maven-3.5.2'}/bin/mvn' javadoc:javadoc"
                }
            }
        }

        // ... autres étapes du pipeline
    }

    post {
        success {
            script {
                if (fileExists('**/target/surefire-reports/*.xml')) {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}
