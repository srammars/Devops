pipeline {
    agent any 

    tools {
       maven 'maven-3.5.2'  // or another installed version
    }   

    
    stages {

        stage('Clone repo') {
            steps {
                
                git branch: 'devops', url: 'https://github.com/srammars/Devops.git'
            }
        }

        stage('Build project') {
            steps {
                // Naviguer vers le r√©pertoire du projet
                dir('demo') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -X'
                    sh './mvnw javadoc:javadoc'
                }
            }
        }
    }
    post {
        success {
            script {
              
                if (fileExists('**/target/surefire-reports/*.xml')) {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
            
        }
       
    }
} 